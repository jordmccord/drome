{
  "name": "drome",
  "version": "0.5.0-alpha.2",
  "description": "Zero-dependencies task runner",
  "main": "lib/drome.js",
  "bin": "bin/drome.js",
  "scripts": {
    "postinstall": "node scripts/post-install.js",
    "test": "jest",
    "lint": "eslint {bin,lib,test}/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dromejs/drome.git"
  },
  "keywords": [
    "task",
    "runner"
  ],
  "author": "Konrad Przydzia≈Ç <konrad.przydzial@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dromejs/drome/issues"
  },
  "homepage": "https://github.com/dromejs/drome#readme",
  "devDependencies": {
    "eslint": "^5.5.0",
    "husky": "^1.1.1",
    "jest": "^23.5.0"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  }
}
